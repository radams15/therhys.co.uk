<!DOCTYPE html>

% use Mojolicious::Static;
% my $static = Mojolicious::Static->new;

<html lang="en">
  <head>
    <title> <%= $title %> </title>
    
    
    %= asset "style.css"
    %= asset "ubuntu.css"
    %= asset "dropdown.css"
    %= asset "post.css"

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
  
  <body>
    <div class="page">
      <div class="header">
        %= include '_header';
      </div>
      
      <div class="navbar">
        %= include '_navbar', title => $title;
      </div>
      
      <div class="sidebar">
        %= include '_sidebar';
      </div>
    
      <div class="content">
        <%= content %>
      </div>
      
      <div class="footer">
        %= include '_footer';
      </div>
    </div>
  </body>
</html>
